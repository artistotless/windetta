{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/mvc.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "MVC"
    }
  },
  "AllowedHosts": "*",

  "ComponentLaunchSettings": {
    "httpsUrl": "https://*:55004",
    "httpUrl": "http://*:56004"
  },

  "ClusterMap": {
    "MainUrl": "https://localhost:55001",
    "IdentityUrl": "https://localhost:55002"
  }
}
