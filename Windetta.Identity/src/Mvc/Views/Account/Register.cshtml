@model RegisterInputModel

<div class="login-page">

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Register</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Register">

                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" asp-for="Username" autofocus>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="user@site.com" asp-for="Email">
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="********" asp-for="Password" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" class="form-control" placeholder="********" asp-for="ConfirmPassword" autocomplete="off">
                        </div>

                        <button class="btn btn-primary" name="button">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>